{% extends 'base.html.twig' %}

{% block body %}
    <div class="row mt-3">
        <div class="col"><a href="{{ url('product.index') }}" class="btn btn-primary">Retour</a></div>
    </div>
    <div class="row mt-3">
        <div class="col">
            <h1>{{ product.name }}</h1>
            <div class="mb-4">
                <img src="{{ asset('img/' ~ product.image) }}" alt="">
            </div>

            <p class="">{{ product.description }}</p>
            <p class="">{{ product.price | format_currency('EUR', locale='fr') | replace({',00' : ''})  }}</p>
            <p class="">{{ product.quantity == 0 ? 'Non disponible' : 'Quantit√© : ' ~ product.quantity }}</p>
        </div>
    </div>
{% endblock %}